{
	"name": "DecOR8R",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"runArgs": [
		"--name", "DecOR8R",
		"--hostname", "DecOR8R.local",
		"--cpus", "2",
		"--memory", "8g"
	],
	"features": {
		"ghcr.io/va-h/devcontainers-features/uv": {
			"shellautocompletion": true
		}
	},
	 "customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"github.copilot",
				"charliermarsh.ruff",
				"tamasfe.even-better-toml"
			]
		}
	 },
	 "postCreateCommand": "sudo apt update && sudo apt upgrade --yes && sudo apt install netcat socat --yes"
}
