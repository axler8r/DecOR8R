{
	"name": "DecOR8R",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"runArgs": ["--name", "DecOR8R"],
	"features": {
		"ghcr.io/devcontainers-contrib/features/poetry": {}
	},
	 "customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"github.copilot",
				"tamasfe.even-better-toml"
			]
		}
	 },
	 "postCreateCommand": "sudo apt update && sudo apt upgrade --yes && sudo apt install netcat --yes"
}
